---
import "bootstrap/dist/css/bootstrap.min.css";
import "../styles/global.css";

const { title, description, keywords } = Astro.props;

const getCurrentYear = new Date().getFullYear();
const finalTitle = title ? title + " - Drabkirn" : "Drabkirn";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Basic Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{finalTitle}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="drabkirn" />
    <meta name="copyright" content={`drabkirn, 2019-${getCurrentYear}`} />
    <meta name="robots" content="index,follow" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content={import.meta.env.SITE + Astro.url.pathname}
    />
    <meta
      property="og:image"
      content={import.meta.env.SITE + "/images/drabkirn-main-og.png"}
    />
    <meta property="og:image:alt" content={finalTitle} />
    <meta property="og:site_name" content="Drabkirn" />
    <meta property="og:title" content={finalTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:see_also" content={import.meta.env.SITE + "/"} />

    <!-- G+ Meta tags -->
    <meta itemprop="name" content={finalTitle} />
    <meta itemprop="description" content={description} />
    <meta
      itemprop="image"
      content={import.meta.env.SITE + "/images/drabkirn-main-og.png"}
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@drabkirn" />
    <meta name="twitter:creator" content="@drabkirn" />
    <meta
      name="twitter:url"
      content={import.meta.env.SITE + Astro.url.pathname}
    />
    <meta name="twitter:title" content={finalTitle} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content={import.meta.env.SITE + "/images/drabkirn-main-og.png"}
    />
    <meta name="twitter:image:alt" content={finalTitle} />

    <!-- Themes Meta -->
    <meta name="theme-color" content="#2A2D31" />
    <meta name="msapplication-navbutton-color" content="#2A2D31" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="#2A2D31" />

    <!-- Favicons -->
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/images/drabkirn-logo-180x180.png"
      type="image/png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/images/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/images/favicon-16x16.png"
    />

    <!-- Manifest -->
    <link rel="manifest" href="/manifest.json" />

    <!-- Website verifications -->
    <meta name="yandex-verification" content="fc2cf54c0571aac8" />
    <meta name="msvalidate.01" content="7506120C6AA700DBA4344E736491AED6" />

    <script
      defer
      src="https://webuma.cdadityang.xyz/webuma.js"
      data-website-id="b0cbdbc5-1022-4cd0-81af-7a08b977b8cc"
      data-do-not-track="true"></script>

    <script is:inline>
      (function () {
        try {
          var stored = localStorage.getItem("theme");
          var prefersDark =
            window.matchMedia &&
            window.matchMedia("(prefers-color-scheme: dark)").matches;
          var theme =
            stored === "light" || stored === "dark"
              ? stored
              : prefersDark
                ? "dark"
                : "light";
          document.documentElement.setAttribute("data-bs-theme", theme);
        } catch (e) {
          // fail safe: do nothing
        }
      })();
    </script>
  </head>
  <body>
    <slot />
    <script>
      import "../scripts/global.js";
    </script>
  </body>
</html>
